{
  "name": "@arthropodindex/monorepo",
  "version": "1.0.0",
  "private": "true",
  "dependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "unbootstrap": "find . -maxdepth 3 -mindepth 2 -type d -name 'node_modules' -exec rm -rf {} \\;",
    "prebuild": "npm run bootstrap",
    "build": "lerna run build",
    "build:common": "lerna run --stream --scope @arthropodindex/common build",
    "clean": "lerna run clean",
    "start": "concurrently 'npm:*:start'",
    "start:dev": "concurrently 'npm:*:start:dev'",
    "frontend:start": "lerna run --no-prefix --stream --scope @arthropodindex/frontend start",
    "backend:start": "lerna run --no-prefix --stream --scope @arthropodindex/backend start",
    "frontend:start:dev": "lerna run --no-prefix --stream --scope @arthropodindex/frontend start:dev",
    "backend:start:dev": "lerna run --no-prefix --stream --scope @arthropodindex/backend start:dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scan-bugs-org/global-arthropod-collections.git"
  },
  "author": "Evin Dunn <evin@scan-bugs.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scan-bugs-org/global-arthropod-collections/issues"
  },
  "homepage": "https://github.com/scan-bugs-org/global-arthropod-collections#readme",
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
